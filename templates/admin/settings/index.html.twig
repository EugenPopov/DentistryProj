{% extends 'admin/base.html.twig' %}

{% block title %}
    Настройки сайта
{% endblock %}

{% block name %}
    Настройки сайта
{% endblock %}

{% block body %}
    <section id="table" style="padding: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Настройки сайта</h3>
                            <a style="margin-left: 20px" href="{{ path('common_settings_update') }}" class="btn btn-primary active" role="button" aria-pressed="true">Редактировать настройки</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Значение</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in array %}
                                        <tr>
                                            <td>{{ item.label }}</td>
                                            <td>{{ item.value }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}