{% extends 'admin/base.html.twig' %}

{% block title %}
    Заявки
{% endblock %}

{% block name %}
    Заявки
{% endblock %}

{% block body %}
    <section id="table" style="padding: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Заявки</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Имя Фамилия</th>
                                        <th>Телефон</th>
                                        <th>Желаемая дата</th>
                                        <th>Комментарий</th>
                                        <th>Акция</th>
                                        <th>Статус заявки</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for application in applications %}
                                        <tr>
                                            <th scope="row">{{ application.id }}</th>
                                            <td>{{ application.name }}</td>
                                            <td><a href="tel:{{ application.phone }}">{{ application.phone }}</a></td>
                                            <td>{{ application.date|date('Y/m/d H:i:s') }}</td>
                                            <td>{{ application.comment }}</td>
                                            <td>{{ application.promotion ? application.promotion.title : 'Без акции' }}</td>
                                            <td>
                                                {% if application.isNew %}
                                                    <a href="{{ path('application_update_is_new', {'id': application.id}) }}" class="btn btn-warning" role="button" aria-pressed="true">Отметить как обработаная</a>
                                                {% else %}
                                                    <a href="{{ path('application_update_is_new', {'id': application.id}) }}" class="btn btn-success" role="button" aria-pressed="true">Отметить как необработаная</a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div class="navigation">
                                    {{ knp_pagination_render(applications) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/admin/js/application.js"></script>
{% endblock %}