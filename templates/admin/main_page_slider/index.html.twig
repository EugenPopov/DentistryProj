{% extends 'admin/base.html.twig' %}

{% block title %}
    Слайдер на главной странице
{% endblock %}

{% block name %}
    Слайдер на главной странице
{% endblock %}

{% block body %}
    <div id="finished" class="alert alert-primary" role="alert" style="display: none; position: absolute">
        Сохранено
    </div>
    <section id="sort" style=" padding: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card" style="margin-top: 10px">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Последовательность слайдов</h3>
                        </div>
                        <div class="card-body">
                            <ul id="sortable" class="list-group">
                                {% for slide in slides %}
                                    <li data-id="{{ slide.id }}" class="ui-state-default list-group-item"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>{{ slide.title }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="table" style="padding: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Слайды</h3>
                            <a style="margin-left: 20px" href="{{ path('main_page_slider_create') }}" class="btn btn-primary active" role="button" aria-pressed="true">Добавить слайд</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <td>#</td>
                                        <th>Название</th>
                                        <th>Описание</th>
                                        <th>Фото</th>
                                        <th>Редактировать</th>
                                        <th>Удалить</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for slide in slides %}
                                        <tr>
                                            <th scope="row">{{ slide.id }}</th>
                                            <td><b>{{ slide.boldTitle }}</b> {{ slide.title }}</td>
                                            <td>{{ slide.description|slice(0, 100) }}</td>
                                            <td><img src="/uploads/{{ slide.image }}" style="width: 150px; height: 150px; object-fit: contain" alt></td>
                                            <td>
                                                <a href="{{ path('main_page_slider_update', {'id': slide.id}) }}" class="btn btn-warning active" role="button" aria-pressed="true">Редактировать</a>
                                            </td>
                                            <td>
                                                <a data-id="{{ slide.id }}" class="btn btn-danger active remove-slide" role="button" aria-pressed="true">Удалить</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/admin/js/main_page_slider.js"></script>
{% endblock %}