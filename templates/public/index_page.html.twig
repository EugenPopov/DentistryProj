{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{#    {{ encore_entry_link_tags('index_page') }}#}
    <link rel="stylesheet" href="{{ asset('css/index-page.css') }}">
    <link rel="stylesheet" href="{{ asset('css/media-queries/index-page_responsive.css') }}">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
{% endblock %}
{% block body %}
    <div class="page_up">
        <img src="{{ asset('img/up.png') }}">
    </div>
    <div class="page_top_wrapper">
        {% include '/elements/header.html.twig' %}
        {% include 'elements/mobile_header.html.twig'%}
        <div class="page_top">
            <div class="page_top-text">
                <div class="page_top-text_header">
                    <span>{{ get_setting('Название стоматологии')|upper }}</span> - {{ get_setting('Заглавие') }}
                </div>
                <div class="page_top-text_text">
                    {{ get_setting('Описание') }}
                </div>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for slide in slides %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index-1 }}" class="{% if loop.first %}active{% endif %} carousel-indicator"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for slide in slides %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img class="d-block w-100" src="/uploads/{{ slide.image }}" alt="First slide">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="why-best_wrapper">
        <div class="best_title">У чому ми найкращі?</div>
        <div class="controls best_controls">

        </div>
        <div class="best_slider">
            {% for service in services %}
            <div class="best_item">
                <img class="best_img" src="/uploads/{{ service.image }}" alt="Third slide">
                <div class="best_item-title">
                    {{ service.title }}
                </div>
                <div class="best_item-text">
                    {{ service.description }}
                </div>
                <a class="best_item-more" href="{{ path('service', {'slug': service.slug}) }}">
                    Дізнатися більше
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
<div class="doctors_wrapper">
    <div class="doctors_title">Наші лікарі</div>
    <div class="controls doctors_controls">
    </div>
    <div class="doctors_slider">
        {% for doctor in doctors %}
            <div class="doctor_item">
                <a href="{{ path('doctor', {'slug': doctor.slug}) }}">
                    <img class="doctor_img" src="/uploads/{{ doctor.image }}" alt="Third slide">
                    <div class="doctor_item-title">
                        {{ doctor.name }}
                    </div>
                    <div class="doctor_item-text">
                        {{ doctor.speciality }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
