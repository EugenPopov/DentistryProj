<div class="map_wrapper">
    <div class="map_title">
        ЯК нас знайти?
    </div>
    <div class="map">
        <div class="map_card">
            <img src="{{ asset('img/house.png') }}">
            <ul class="address">
               <li>
                   {{get_setting('Адрес')}}
               </li>
                <li>
                    {{get_setting('Метро')}}
                </li>
            </ul>
        </div>
        <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q={{get_setting('Адрес')}}&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
</div>
<div class="contact_wrapper">
    <div class="contact_img">
        <img src="{{ asset('img/main.png') }}">
    </div>
    <div class="contact_form">
        <div class="contact_form-title">
            ЗАПИСАТИСЯ НА ПРИЙОМ
        </div>
        <form>
            <div class="form">
                <div class="top_form">
                    <input type="text" id="name" placeholder="Ваше имя">
                    <input type="tel" id="tel" placeholder="Ваш номер телефону">
                </div>
                <div class="middle_form">
                    <input type="date" id="date" placeholder="Виберіть бажаему дату">
                    <input type="time" id="time" placeholder="Виберіть бажаемий час">
                </div>
                <div class="bottom_form">
                    <input type="text" id="comment" placeholder="Залешить ваш коментар">
                </div>
            </div>
            <button type="submit" class="btn btn-contact_form">Записатися</button>
