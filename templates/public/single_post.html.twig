{% extends 'base.html.twig' %}
{% block title %}{{ blog.seoTitle ? blog.seoTitle : get_setting('seo_title_blog') }}{% endblock %}
{% block description %}{{ blog.seoDescription ? blog.seoDescription : get_setting('seo_description_blog') }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/single-post.css') }}">
    <link rel="stylesheet" href="{{ asset('css/media-queries/single-post_responsive.css') }}">
{% endblock %}
{% block body %}
    <div class="page_top_wrapper">
        {% include '/elements/header.html.twig' %}
        {% include 'elements/mobile_header.html.twig'%}
        <div class="page_top-content">
            <div class="page_top">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('index') }}">Головна</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('reviews') }}">Пацієнтам</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ blog.title }}</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="post">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('blog_update', {'id': blog.id}) }}" class="btn btn-primary active btn-lg" target="_blank">
                    Отредактировать
                </a>
            {% endif %}
            <img src="/uploads/{{ blog.image }}">
            <div class="post_title">{{ blog.title }}</div>
            <div class="post_text">{{ blog.description|raw }}</div>
        </div>

    </div>

    <footer>
        {% include '/elements/footer.html.twig' %}
    </footer>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('vendor/slick-slider/slick.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/single_service.js') }}"></script>
{% endblock %}
